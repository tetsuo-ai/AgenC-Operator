{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tetsuo",
  "version": "0.1.0",
  "identifier": "com.agenc.tetsuo",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "TETSUO // AgenC Operator",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "center": true,
        "visible": true,
        "focus": true,
        "shadow": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' wss://api.x.ai https://*.solana.com https://*.helius-rpc.com",
        "script-src": "'self' 'unsafe-inline'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: blob:",
        "media-src": "'self' blob:",
        "font-src": "'self' data:"
      },
      "dangerousDisableAssetCspModification": false
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Finance",
    "shortDescription": "Cyberpunk voice operator for AgenC Solana protocol",
    "longDescription": "Tetsuo is a voice-controlled desktop operator for the AgenC Solana protocol. Features cyberpunk aesthetics, local-first security (keys never leave device), and natural voice commands for task management.",
    "windows": {
      "wix": null,
      "nsis": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
