# ============================================================================
# TETSUO - AgenC Operator Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values.
# Never commit .env to version control!
# ============================================================================

# ============================================================================
# Grok Voice API (X.AI)
# ============================================================================
# Get your API key from: https://console.x.ai/
# Pricing: $0.05/minute for voice
VITE_XAI_API_KEY=your_xai_api_key_here

# ============================================================================
# Solana Configuration
# ============================================================================
# RPC endpoint for Solana network
# Devnet: https://api.devnet.solana.com
# Mainnet: https://api.mainnet-beta.solana.com
# Or use a dedicated RPC like Helius, QuickNode, etc.
VITE_SOLANA_RPC_URL=https://api.devnet.solana.com

# Network identifier
VITE_SOLANA_NETWORK=devnet

# Path to your Solana keypair file (local-first, never leaves device)
# Usually at ~/.config/solana/id.json
SOLANA_KEYPAIR_PATH=~/.config/solana/id.json

# ============================================================================
# AgenC Protocol
# ============================================================================
# AgenC program ID (deployed on devnet and mainnet)
VITE_AGENC_PROGRAM_ID=EopUaCV2svxj9j4hd7KjbrWfdjkspmm2BCBe7jGpKzKZ

# ============================================================================
# Vector Memory (Qdrant)
# ============================================================================
# Qdrant instance URL for conversational memory
# Run locally: docker run -p 6333:6333 qdrant/qdrant
QDRANT_URL=http://localhost:6333

# OpenAI API key for embedding generation (text-embedding-3-small)
OPENAI_API_KEY=sk-your_openai_api_key_here

# ============================================================================
# Local Whisper (Offline ASR Fallback)
# ============================================================================
# Path to whisper.cpp model file
# Download from: https://huggingface.co/ggerganov/whisper.cpp
# Recommended: ggml-base.en.bin for English
WHISPER_MODEL_PATH=./models/ggml-base.en.bin

# ============================================================================
# Feature Flags
# ============================================================================
# Enable local whisper fallback when Grok API is unavailable
VITE_ENABLE_LOCAL_WHISPER=false

# Enable verbose logging
VITE_DEBUG=false

# ============================================================================
# Twitter/X OAuth (For Social Posting)
# ============================================================================
# Twitter Client ID for OAuth 2.0 PKCE flow
# Get from: https://developer.twitter.com/en/portal/dashboard
# Create a "User authentication settings" project with:
#   - Type: Native App (for PKCE)
#   - Callback URL: http://localhost:9876/callback
#   - Scopes: tweet.read, tweet.write, users.read, offline.access
TWITTER_CLIENT_ID=your_twitter_client_id_here

# ============================================================================
# Discord Integration
# ============================================================================
# Discord bot token from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Default guild (server) ID for channel operations
DISCORD_DEFAULT_GUILD_ID=your_guild_id_here

# ============================================================================
# Email Integration (Resend)
# ============================================================================
# Resend API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Sender email address (must be verified in Resend)
EMAIL_FROM_ADDRESS=tetsuo@yourdomain.com

# Sender display name
EMAIL_FROM_NAME=Tetsuo Operator

# ============================================================================
# GitHub Integration (Push Code to GitHub)
# ============================================================================
# Personal Access Token from: https://github.com/settings/tokens
# Required scopes: repo, gist, workflow
GITHUB_TOKEN=ghp_your_token_here
# Default repository for issues/comments/workflows (optional)
GITHUB_DEFAULT_OWNER=your_username_or_org
GITHUB_DEFAULT_REPO=your_default_repo
